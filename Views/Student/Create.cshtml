@using (Html.BeginForm("Create", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <link rel="stylesheet" href="~/css/CreateStyle.css" />
    <div class="row">
        <div class="col-25">
            <label>Name</label>
        </div>
        <div class="col-75">
            <input type="text" id="StudentName" name="StudentName" placeholder="Student Name" />
        </div>
    </div>
    <div class="row">
        <div class="col-25">
            <label>Age</label>
        </div>
        <div class="col-75">
            <input type="text" id="StudentAge" name="StudentAge" placeholder="Student Age" />
        </div>
    </div>
    <div class="row">
        <div class="col-25">
            <label>Is Active</label>
        </div>
        <div class="col-75">
            <input type="checkbox" value="false" id="IsActive" name="IsActive" checked />
        </div>
    </div>
    <div class="row">
        <input type="submit" value="submit" />
    </div>
}
